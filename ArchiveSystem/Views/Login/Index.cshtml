@model ArchiveSystem.Dtos.UsuarioLoginDto

@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Login";
}
@if (TempData["MenssagemStatusLogin"] != null)
{
    <div class="alert alert-danger" role="alert">
        <p style="font-size = 4">@TempData["MenssagemStatusLogin"]</p>
    </div>
}
<form asp-controller="Login" asp-action="Entrar" method="post">
    <div class="mb-3">
        <label for="email" class="form-label">Emails</label>
        <input asp-for="Email" type="email" class="form-control" id="email" aria-describedby="emailHelp">
    </div>
    
    <div class="mb-3">
        <label for="senha" class="form-label">Senha</label>
        <input asp-for="Senha" type="password" class="form-control" id="senha">
    </div>
    <button type="submit" class="btn btn-primary">Entrar</button>
</form>